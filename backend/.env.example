# NexMind Backend Configuration

# Application Settings
APP_NAME=NexMind
APP_VERSION=1.0.0
DEBUG=False

# API Settings
API_HOST=0.0.0.0
API_PORT=8000

# AI Model Configuration (至少配置一个)
# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.1
OPENAI_MAX_TOKENS=4000

# Anthropic Configuration (可选)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
# ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Search Engine Configuration
# 可选值: duckduckgo, tavily, brave
SEARCH_ENGINE=duckduckgo

# Tavily Search (如果使用tavily搜索引擎)
# TAVILY_API_KEY=your_tavily_api_key_here

# Brave Search (如果使用brave搜索引擎)
# BRAVE_API_KEY=your_brave_api_key_here

# Database Configuration
DATABASE_URL=sqlite:///./nexmind.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/nexmind.log

# Agent Configuration
MAX_ITERATIONS=10
MAX_EXECUTION_TIME=300

# Cache Configuration
CACHE_TTL=3600

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000